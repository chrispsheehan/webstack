---
const { baseDomain } = Astro.props;
const year = new Date().getFullYear();
const siteVersion = import.meta.env.PUBLIC_SITE_VERSION || "1.0.0";
---

<style>
  footer {
    padding: 12px;
    background: var(--color-footer-background);
    color: var(--color-link);
    font-size: 14px;
  }

  .footer-container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 16px;
    align-items: center;
  }

  .footer-version {
    font-size: 0.8rem;
    margin-top: 0.25rem;
  }
</style>

<footer>
  <div class="footer-container">
    <p>&copy; {year} {baseDomain}</p>
    <p class="footer-version">v{siteVersion}</p>
  </div>
</footer>
