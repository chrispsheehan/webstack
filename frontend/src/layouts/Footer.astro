---
const { baseDomain } = Astro.props;
const year = new Date().getFullYear();
const siteVersion = import.meta.env.PUBLIC_SITE_VERSION || "1.0.0";
---

<style>
  footer {
    padding: 8px 16px;
    background: var(--color-background-dark);
    color: var(--color-link);
    font-size: 14px;
  }

  .footer-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 8px;
    flex-wrap: nowrap;
    line-height: 0.5;
  }

  .footer-version {
    font-size: 14px;
    margin: 0;
  }
</style>

<footer>
  <div class="footer-container">
    <p>&copy; {year} {baseDomain}</p>
    <p class="footer-version">v{siteVersion}</p>
  </div>
</footer>
