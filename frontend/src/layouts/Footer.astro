---
const { baseDomain } = Astro.props;
const year = new Date().getFullYear();
const siteVersion = import.meta.env.PUBLIC_SITE_VERSION || "1.0.0";
---

<style>
  footer {
    padding: 24px;
    background: var(--color-footer-background);
    color: var(--color-text);
    font-size: 14px;
  }

  .footer-container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 16px;
    align-items: center;
  }

  .footer-version {
    font-size: 0.8rem;
    color: #888;
    margin-top: 0.25rem;
  }

  .social-links {
    display: flex;
    gap: 12px;
  }

  .social-icon {
    width: 24px;
    height: 24px;
    fill: var(--color-link);
  }
</style>

<footer>
  <div class="footer-container">
    <p>&copy; {year} {baseDomain}</p>
    <p class="footer-version">v{siteVersion}</p>
    <div class="social-links">
      <a
        href="https://github.com/chrispsheehan"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img src="/assets/social/github.png" alt="GitHub" class="social-icon" />
      </a>
      <a
        href="https://www.linkedin.com/in/chrispsheehan"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/assets/social/linkedin.png"
          alt="LinkedIn"
          class="social-icon"
        />
      </a>
      <a
        href="https://registry.terraform.io/namespaces/chrispsheehan"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/assets/social/terraform.png"
          alt="Terraform"
          class="social-icon"
        />
      </a>
      <a
        href="https://www.credly.com/users/chris-sheehan.b081233e"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/assets/social/credly.png"
          alt="Terraform"
          class="social-icon"
        />
      </a>
      <a
        href="https://hub.docker.com/u/chrispsheehan"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/assets/social/docker.png"
          alt="Dockerhub"
          class="social-icon"
        />
      </a>
    </div>
  </div>
</footer>
