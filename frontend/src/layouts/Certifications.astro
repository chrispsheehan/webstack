---
import Certifications from "../components/Certifications";
---

<style is:global>
.cert-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  justify-content: center;
}

.cert-grid > a {
  display: block;
  max-width: 220px;
  width: 100%;
  text-align: center;
  margin: 0 auto;
  transition:
    box-shadow 0.2s ease,
    transform 0.2s ease;
}

.cert-grid > a:hover .cert-img-wrapper {
  background: var(--color-link);
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
  transform: translateY(-2px) scale(1.02);
}

.cert-img-wrapper {
  position: relative;
  width: 100%;
  aspect-ratio: 16 / 9;
  overflow: hidden;
  border-radius: 1rem;
  background: var(--color-header-background, #f9f9f9);
}

.cert-img-wrapper img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
}

@media (max-width: 700px) {
  .cert-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    max-width: 960px;
    width: 100%;
  }
}

@media (max-width: 400px) {
  .cert-grid > a {
    flex: 1 1 100%;
    max-width: 100px;
  }
}

</style>

<section>
  <h2>Certifications</h2>
  <h3>
    Hi, I’m Chris — a Senior Platform Engineer focused on making it easier for
    teams to ship code.
  </h3>
  <Certifications client:load />
</section>
