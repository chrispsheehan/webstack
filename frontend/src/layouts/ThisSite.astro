---
import CostExplorer from "../components/CostExplorer";
import Visits from "../components/Visits";
---

<style is:global>
  .container {
    max-width: 1100px;
    margin: 0 auto;
    width: 100%;
    padding: 0 1rem;
    box-sizing: border-box;
  }

  .site-section-meta {
    margin-bottom: 2.5rem;
  }

  .dashboard-wrapper {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    align-items: flex-start;
  }

  .github-icon-button {
    display: block;
    background: var(--color-header-background);
    padding: 1rem;
    border-radius: 0.75rem;
    border: 1px solid var(--color-heading);
    transition:
      box-shadow 0.2s ease,
      transform 0.2s ease;
    height: fit-content;
    flex: 0 0 auto;
  }

  .github-icon-button:hover {
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px) scale(1.05);
  }

  .github-icon-button img {
    height: 40px;
    width: 40px;
    display: block;
  }

  .dashboard-row {
    display: flex;
    flex: 1;
    gap: 2rem;
    flex-wrap: wrap;
    min-width: 0;
  }

  .dashboard-card {
    background: var(--color-header-background);
    border-radius: 1rem;
    padding: 1.5rem;
    width: 100%;
    max-width: 340px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    transition:
      box-shadow 0.2s ease,
      transform 0.2s ease;
    border: 1px solid var(--color-heading);
  }

  .dashboard-card:hover {
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px) scale(1.02);
  }

  .dashboard-card h3 {
    margin: 0 0 1rem;
    font-size: 1.3rem;
    color: var(--color-text);
  }

  .dashboard-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
  }

  .dashboard-card li {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .dashboard-card strong {
    font-weight: 600;
    color: var(--color-text);
  }

  .dashboard-card small {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: var(--color-text);
  }

  @media (max-width: 900px) {
    .dashboard-wrapper {
      flex-direction: column;
    }

    .dashboard-row {
      flex-direction: column;
    }

    .dashboard-card {
      max-width: 100%;
    }
  }
</style>

<section id="this-site">
  <div class="container">
    <div class="site-section-meta">
      <h2>This Site</h2>
      <p>
        Built with Astro, deployed to AWS using Terragrunt and Serverless.
      </p>
      <a
        href="https://github.com/chrispsheehan/webstack/actions/workflows/release_prod.yml"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="https://github.com/chrispsheehan/webstack/actions/workflows/release_prod.yml/badge.svg"
          alt="Webstack Workflow Status"
        />
      </a>
    </div>

    <div class="dashboard-wrapper">
      <!-- GitHub Icon -->
      <a
        href="https://github.com/chrispsheehan/webstack"
        target="_blank"
        rel="noopener noreferrer"
        class="github-icon-button"
      >
        <img src="/assets/social/github.png" alt="GitHub" />
      </a>

      <!-- Cards -->
      <div class="dashboard-row">
        <Visits client:load />
        <CostExplorer client:load />
      </div>
    </div>
  </div>
</section>
