---
import CostExplorer from "../components/CostExplorer";
import Visits from "../components/Visits";

const { githubRepo } = Astro.props;
---

<style is:global>
  .container {
    max-width: 1100px;
    margin: 0 auto;
    width: 100%;
    padding: 0 1rem;
    box-sizing: border-box;
  }

  .site-section-meta {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 2.5rem;
  }

  .site-section-meta img {
    transform: scale(2);
    transform-origin: left center;
  }


  .dashboard-wrapper {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .dashboard-row {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    width: 100%;
  }

  .dashboard-card {
    background: var(--color-header-background);
    border-radius: 1rem;
    padding: 1.5rem;
    flex: 1 1 0;
    min-width: 300px;
    max-width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    transition:
      box-shadow 0.2s ease,
      transform 0.2s ease;
    border: 1px solid var(--color-heading);
  }

  .dashboard-card:hover {
    background: var(--color-link);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px) scale(1.02);
  }

  .dashboard-card h3 {
    margin: 0 0 1rem;
    font-size: 1.3rem;
    color: var(--color-text);
  }

  .dashboard-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
  }

  .dashboard-card li {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .dashboard-card strong {
    font-weight: 600;
    color: var(--color-text);
  }

  .dashboard-card small {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: var(--color-text);
  }

  @media (max-width: 900px) {
    .dashboard-wrapper {
      flex-direction: column;
    }

    .dashboard-row {
      flex-direction: column;
    }

    .dashboard-card {
      width: 100%;
    }
  }
</style>

<section id="this-site">
  <h2>This Site</h2>
  <p>Built with Astro, deployed to AWS using Terragrunt and Serverless.</p>
  <div class="container">
    <div class="site-section-meta">
      <a
        href={`https://github.com/${githubRepo}/actions/workflows/release_prod.yml`}
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src={`https://github.com/${githubRepo}/actions/workflows/release_prod.yml/badge.svg`}
          alt="Webstack Workflow Status"
        />
      </a>
    </div>

    <div class="dashboard-wrapper">
      <div class="dashboard-row">
        <Visits client:load />
        <CostExplorer client:load />
      </div>
    </div>
  </div>
</section>
