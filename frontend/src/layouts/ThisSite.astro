---
import CostExplorer from "../components/CostExplorer";
import Visits from "../components/Visits";

const { githubRepo } = Astro.props;
---

<section id="this-site">
  <h2>This Site</h2>
  <p>
    Astro-powered and deployed with Terragrunt and GitHub Actions. A fast,
    serverless site that's inexpensive to run.
  </p>
  <div class="container">
    <div class="dashboard-wrapper">
      <div class="dashboard-row">
        <div class="dashboard-card github-card">
          <a
            href={`https://github.com/${githubRepo}`}
            target="_blank"
            rel="noopener noreferrer"
            class="github-card-link"
          >
            <div class="github-card-content">
              <img
                class="pipeline-badge"
                src={`https://github.com/${githubRepo}/actions/workflows/release_prod.yml/badge.svg`}
                alt="Webstack Workflow Status"
              />
              <div class="github-repo-button">
                <img src="/assets/social/github.png" alt="GitHub" />
                <span>Source Code</span>
              </div>
            </div>
          </a>
        </div>
        <div class="dashboard-card">
          <Visits client:load />
        </div>
        <div class="dashboard-card">
          <CostExplorer client:load />
        </div>
      </div>
    </div>
  </div>
</section>

<style is:global>
  .container {
    width: 100%;
    padding: 0 1rem;
    box-sizing: border-box;
  }

  .dashboard-wrapper {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    flex: 1 1 0;
    min-width: 0;
  }

  .dashboard-row {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    width: 100%;
    justify-content: center;
  }

  .dashboard-card {
    background: var(--color-background-dark);
    border-radius: 1rem;
    padding: 1.5rem;
    min-width: 300px; /* ðŸ‘ˆ fixed width */
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    transition:
      box-shadow 0.2s ease,
      transform 0.2s ease;
    border: none;
  }

  .dashboard-card:hover {
    background: var(--color-link);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px) scale(1.02);
  }

  .pipeline-badge {
    height: 24px;
    object-fit: contain;
    margin-bottom: 1rem;
  }

  .github-repo-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 12px 20px;
    border-radius: 8px;
    background: var(--color-background);
    color: var(--color-text);
    font-weight: 600;
    text-decoration: none;
    white-space: nowrap;
    font-size: 1rem;
    border: none;
    transition: background 0.2s ease;
  }

  .github-repo-button img {
    width: 28px;
    height: 28px;
    object-fit: contain;
    display: inline-block;
  }

  .github-card {
    border: none;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .github-card-link {
    border: none;
    text-decoration: none;
    color: inherit;
    display: block;
    width: 100%;
    height: 100%;
  }

  .github-card-content {
    border: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .github-repo-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 12px 20px;
    border-radius: 8px;
    background: var(--color-background);
    color: var(--color-text);
    font-weight: 600;
    white-space: nowrap;
    font-size: 1rem;
    transition: background 0.2s ease;
  }

  .dashboard-card h3 {
    margin: 0 0 1rem;
    font-size: 1.3rem;
    color: var(--color-text);
  }

  .dashboard-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
  }

  .dashboard-card li {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .dashboard-card strong {
    font-weight: 600;
    color: var(--color-text);
  }

  .dashboard-card small {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: var(--color-text);
  }

  @media (min-width: 1001px) {
    .dashboard-row {
      gap: 5rem;
    }
  }

  @media (max-width: 1000px) {
    .dashboard-wrapper {
      width: 100%;
    }

    .dashboard-row {
      flex-direction: column;
    }
  }
</style>
